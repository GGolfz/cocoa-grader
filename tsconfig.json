{
    "compilerOptions": {
        "target": "esnext",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "module": "esnext",
        "moduleResolution": "node",
        "rootDirs": ["src"],
        "outDir": "./dist",
        "baseUrl": "./",
        "incremental": true
    },
    "include": ["./src/**/*"]
}
